      "da": 1338,
      "pf": 2880,
      "professionalTax": 200,
      "bonus": 2122,
      "leaveDeduction": 0,
      "netPay": 16840,
      "workedDays": 30,
      "totalLeaves": 0,
      "unpaidLeaves": 0
    },
    "calculation_breakdown": {
      "step1_base_salary": "30000 * 0.4 = 12000",
      "step2_pf_deduction": "12000 - 2880 = 9120",
      "step3_professional_tax": "9120 - 200 = 8920 (final base)",
      "step4_hra": "8920 * 0.4 = 3568",
      "step5_ta": "8920 * 0.1 = 892",
      "step6_da": "8920 * 0.15 = 1338",
      "step7_bonus": "8920 - (3568 + 892 + 1338) = 2122",
      "step8_net_pay": "8920 + 3568 + 892 + 1338 + 2122 = 16840"
    }
  },
