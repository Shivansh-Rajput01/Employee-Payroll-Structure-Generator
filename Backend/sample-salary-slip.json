  "scenario2_salary_with_pf": {
    "description": "Employee with salary >= 12000, PF enabled, no leaves",
    "input": {
      "name": "Alice Smith",
      "salary": 30000,
      "isPfApplicable": true
    },
    "output": {
      "employeeName": "Alice Smith",
      "grossSalary": 30000,
      "salaryType": "SALARY",
      "baseSalary": 8920,
      "hra": 3568,
